<Window x:Class="AlbumsOfOliverDragojevic.AlbumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlbumsOfOliverDragojevic"
        mc:Ignorable="d"
        Title="Albums" 
        Height="500" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#EADDCA">

    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel
            x:Name="AdminControlStackPanel"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Visibility="Hidden">
            <CheckBox
                x:Name="SelectAllCheckBox"
                Content="Select All"
                FontSize="14"
                Foreground="#2b1d0e"
                Margin="0 0 20 0"
                VerticalAlignment="Center"
                Checked="SelectAllCheckBox_Checked"
                Unchecked="SelectAllCheckBox_Unchecked"/>

            <Button
                x:Name="AddNewAlbumButton"
                Margin="0 0 10 0"
                Click="AddNewAlbumButton_Click"
                Background="#2b1d0e"
                Foreground="White"
                Content="Add"
                Width="80"
                Height="25"
                FontSize="14"/>

            <Button
                x:Name="DeleteAlbumButton"
                Margin="0 0 10 0"
                Click="DeleteAlbumButton_Click"
                Background="#2b1d0e"
                Foreground="White"
                Content="Delete"
                Width="80"
                Height="25"
                FontSize="14"/>
        </StackPanel>

        <StackPanel
            x:Name="ExitButtonStackPanel"
            Grid.Row="0"
            Grid.Column="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Button
                x:Name="ExitFromAlbumsButton"
                Margin="0 0 10 0"
                Click="ExitFromAlbumsButton_Click"
                Content="Exit"
                Width="80"
                Height="25"
                FontSize="14"/> 
        </StackPanel>

        <DataGrid 
            x:Name="AlbumsDataGrid" 
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            ItemsSource="{Binding Albums}"
            IsReadOnly="True"
            AutoGenerateColumns="False"
            HeadersVisibility="Column"
            ScrollViewer.CanContentScroll="True" 
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Margin="10"
            RowHeight="110">
            <DataGrid.Columns>
                <DataGridTemplateColumn
                    x:Name="CheckBoxDataGridTemplateColumn"
                    IsReadOnly="False"
                    Visibility="Hidden"
                    Width="40"
                    Header="">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="#997a54"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                            <Setter Property="BorderBrush" Value="white"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox 
                                x:Name="AlbumCheckBox" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Click="AlbumCheckBox_Click"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Album"
                    Width="*">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="#997a54"/>
                            <Setter Property="Foreground" Value="#2b1d0e"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                            <Setter Property="BorderBrush" Value="white"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock 
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Margin="5"
                                FontSize="14">
                                <Hyperlink Click="Hyperlink_Click">
                                    <TextBlock Text="{Binding AlbumName}"/>
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Cover"
                    Width="120">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="#997a54"/>
                            <Setter Property="Foreground" Value="#2b1d0e"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                            <Setter Property="BorderBrush" Value="white"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding PathToImage}" Stretch="Fill" Height="100px" Width="100px" Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Date Added"
                    Width="150">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="#997a54"/>
                            <Setter Property="Foreground" Value="#2b1d0e"/>
                            <Setter Property="BorderBrush" Value="white"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Height" Value="25"/>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock 
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="5"
                                FontSize="14">
                                <TextBlock 
                                    Text="{Binding DateAdded}"/>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
