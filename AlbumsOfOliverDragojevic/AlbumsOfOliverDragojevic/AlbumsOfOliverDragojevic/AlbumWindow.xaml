<Window
    x:Class="AlbumsOfOliverDragojevic.AlbumWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AlbumsOfOliverDragojevic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Albums"
    Width="650"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Canvas Width="650" Height="500">
        <Canvas.Resources>
            <DropShadowEffect
                x:Key="MouseOverDropShadowEffect"
                Direction="320"
                Opacity="80"
                ShadowDepth="10"
                Color="PeachPuff" />
        </Canvas.Resources>

        <Path
            Name="UIPath"
            Width="650"
            Height="500"
            Fill="#EADDCA"
            Stretch="Fill"
            Stroke="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="10,0">
                        <ArcSegment
                            IsLargeArc="False"
                            Point="0,10"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="0,340" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="10,350"
                            RotationAngle="0"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="540,350" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="550,340"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="550,10" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="540,0"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <Grid Width="650" Height="490">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                x:Name="AdminControlStackPanel"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Margin="10,20,10,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Visibility="Hidden">
                <CheckBox
                    x:Name="SelectAllCheckBox"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Checked="SelectAllCheckBox_Checked"
                    Content="Select All"
                    FontSize="14"
                    Foreground="#2b1d0e"
                    Unchecked="SelectAllCheckBox_Unchecked" />

                <Button
                    x:Name="AddNewAlbumButton"
                    Width="80"
                    Height="25"
                    Margin="0,0,10,0"
                    Background="#2b1d0e"
                    Click="AddNewAlbumButton_Click"
                    Content="Add"
                    FontSize="14"
                    Foreground="White" />

                <Button
                    x:Name="DeleteAlbumButton"
                    Width="80"
                    Height="25"
                    Margin="0,0,10,0"
                    Background="#2b1d0e"
                    Click="DeleteAlbumButton_Click"
                    Content="Delete"
                    FontSize="14"
                    Foreground="White" />
            </StackPanel>

            <StackPanel
                x:Name="ExitButtonStackPanel"
                Grid.Row="0"
                Grid.Column="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <Button
                    x:Name="ExitFromAlbumsButton"
                    Width="80"
                    Height="25"
                    Margin="0,10,10,0"
                    Click="ExitFromAlbumsButton_Click"
                    Content="Exit"
                    FontSize="14" />
            </StackPanel>

            <DataGrid
                x:Name="AlbumsDataGrid"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Margin="10"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding Albums}"
                RowHeight="110"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                        x:Name="CheckBoxDataGridTemplateColumn"
                        Width="40"
                        Header=""
                        IsReadOnly="False"
                        Visibility="Hidden">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="#997a54" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="FontWeight" Value="DemiBold" />
                                <Setter Property="BorderBrush" Value="white" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox
                                    x:Name="AlbumCheckBox"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="AlbumCheckBox_Click"
                                    IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Album">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="#997a54" />
                                <Setter Property="Foreground" Value="#2b1d0e" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="FontWeight" Value="DemiBold" />
                                <Setter Property="BorderBrush" Value="white" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    TextAlignment="Center">
                                    <Hyperlink Click="Hyperlink_Click">
                                        <TextBlock Text="{Binding AlbumName}" />
                                    </Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="120" Header="Cover">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="#997a54" />
                                <Setter Property="Foreground" Value="#2b1d0e" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="FontWeight" Value="DemiBold" />
                                <Setter Property="BorderBrush" Value="white" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image
                                    Width="100px"
                                    Height="100px"
                                    Margin="5"
                                    Source="{Binding PathToImage}"
                                    Stretch="Fill" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="150" Header="Date Added">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="#997a54" />
                                <Setter Property="Foreground" Value="#2b1d0e" />
                                <Setter Property="BorderBrush" Value="white" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="FontWeight" Value="DemiBold" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="Height" Value="25" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    TextAlignment="Center">
                                    <TextBlock Text="{Binding DateAdded}" />
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Canvas>

</Window>
