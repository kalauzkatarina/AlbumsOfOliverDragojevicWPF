<Window
    x:Class="AlbumsOfOliverDragojevic.AddAlbumWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:AlbumsOfOliverDragojevic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add album"
    Width="650"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="DefaultButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>
    <Canvas Width="650" Height="550">
        <Canvas.Resources>
            <DropShadowEffect
                x:Key="MouseOverDropShadowEffect"
                Direction="320"
                Opacity="80"
                ShadowDepth="10"
                Color="PeachPuff" />
        </Canvas.Resources>

        <Path
            Name="UIPath"
            Width="650"
            Height="550"
            Fill="#EADDCA"
            Stretch="Fill"
            Stroke="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="10,0">
                        <ArcSegment
                            IsLargeArc="False"
                            Point="0,10"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="0,340" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="10,350"
                            RotationAngle="0"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="540,350" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="550,340"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="550,10" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="540,0"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <Grid
            Width="610"
            Height="520"
            Margin="20">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                VerticalAlignment="Top">

                <TextBlock
                    FontWeight="Bold"
                    Foreground="#2b1d0e"
                    Text="Album name:" />
                <TextBox
                    x:Name="AlbumNameTextBox"
                    Height="22"
                    Margin="0,5,0,10"
                    GotFocus="AlbumNameTextBox_GotFocus"
                    LostFocus="AlbumNameTextBox_LostFocus"
                    Text="" />
                <Label
                    x:Name="AlbumNameErrorLabel"
                    Content=""
                    Foreground="Red" />

                <TextBlock
                    FontWeight="Bold"
                    Foreground="#2b1d0e"
                    Text="Published year:" />
                <TextBox
                    x:Name="PublishedYearTextBox"
                    Height="22"
                    Margin="0,5,0,10"
                    GotFocus="PublishedYearTextBox_GotFocus"
                    LostFocus="PublishedYearTextBox_LostFocus"
                    Text="" />
                <Label
                    x:Name="PublishedYearErrorLabel"
                    Content=""
                    Foreground="Red" />

                <TextBlock
                    FontWeight="Bold"
                    Foreground="#2b1d0e"
                    Text="Date (dd/mm/yyyy):" />
                <TextBox
                    x:Name="DateAddedTextBox"
                    Height="22"
                    Margin="0,5,0,10" />

                <Button
                    x:Name="ChooseImageButton"
                    Width="120"
                    Height="23"
                    Margin="0,0,0,10"
                    Background="#2b1d0e"
                    Click="ChooseImageButton_Click"
                    Content="Choose image"
                    FontSize="14"
                    Foreground="white" />
                <Border
                    Width="180"
                    Height="150"
                    Background="White"
                    BorderBrush="#2b1d0e"
                    BorderThickness="1">
                    <Image
                        x:Name="ImagePreview"
                        Width="150"
                        Height="150"
                        Stretch="Uniform" />
                </Border>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    x:Name="AddButton"
                    Width="80"
                    Height="23"
                    Margin="0,0,35,0"
                    Background="#2b1d0e"
                    Click="AddButton_Click"
                    Content="Add"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    x:Name="CancelButton"
                    Width="80"
                    Height="23"
                    Click="CancelButton_Click"
                    Content="Cancel"
                    FontSize="14" />
            </StackPanel>

            <DockPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="10">
                <ToolBar Name="EditorToolBar" DockPanel.Dock="Top">
                    <ToggleButton
                        Name="BoldToggleButton"
                        Command="EditingCommands.ToggleBold"
                        ToolTip="Bold">
                        <fa5:SvgAwesome
                            Height="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Icon="Solid_Bold" />
                    </ToggleButton>

                    <Separator />

                    <ToggleButton
                        Name="ItalicToggleButton"
                        Command="EditingCommands.ToggleItalic"
                        ToolTip="Italic">
                        <fa5:SvgAwesome
                            Height="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Icon="Solid_Italic" />
                    </ToggleButton>

                    <Separator />

                    <ToggleButton
                        Name="UnderlineToggleButton"
                        Command="EditingCommands.ToggleUnderline"
                        ToolTip="Underline">
                        <fa5:SvgAwesome
                            Height="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Icon="Solid_Underline" />
                    </ToggleButton>

                    <Separator />

                    <ComboBox
                        Name="FontFamilyComboBox"
                        Width="150"
                        IsTextSearchCaseSensitive="False"
                        IsTextSearchEnabled="True"
                        SelectionChanged="FontFamilyComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="200"
                                    FontFamily="{Binding}"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <ComboBox
                        x:Name="FontSizeComboBox"
                        Width="40"
                        SelectionChanged="FontSizeComboBox_SelectionChanged">
                        <ComboBoxItem Content="10" />
                        <ComboBoxItem Content="12" />
                        <ComboBoxItem Content="14" />
                        <ComboBoxItem Content="16" />
                        <ComboBoxItem Content="18" />
                        <ComboBoxItem Content="24" />
                        <ComboBoxItem Content="32" />
                    </ComboBox>

                    <ComboBox
                        x:Name="FontColorComboBox"
                        Width="85"
                        SelectionChanged="FontColorComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,5,0"
                                        Fill="{Binding Brush}" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ToolBar>

                <DockPanel Margin="0,10,0,0" LastChildFill="True">
                    <Label
                        x:Name="RichTextBoxErrorLabel"
                        DockPanel.Dock="Bottom"
                        Foreground="Red"
                        Visibility="Visible" />

                    <Grid>
                        <RichTextBox
                            x:Name="EditorRichTextBox"
                            GotFocus="EditorRichTextBox_GotFocus"
                            LostFocus="EditorRichTextBox_LostFocus"
                            SelectionChanged="EditorRichTextBox_SelectionChanged"
                            TextChanged="EditorRichTextBox_TextChanged"
                            VerticalScrollBarVisibility="Auto" />

                        <TextBlock
                            x:Name="RichTextBoxPlaceholder"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontStyle="Italic"
                            Foreground="LightSlateGray"
                            IsHitTestVisible="False"
                            Text="Enter album description..."
                            Visibility="Visible" />
                    </Grid>
                </DockPanel>
            </DockPanel>

            <StatusBar
                Grid.Row="1"
                Grid.Column="1"
                Height="23"
                Margin="10,0,10,0"
                VerticalAlignment="Bottom">
                <StatusBarItem>
                    <TextBlock
                        x:Name="WordCountTextBlock"
                        FontSize="14"
                        Text="Words: 0" />
                </StatusBarItem>
            </StatusBar>

        </Grid>
    </Canvas>
</Window>
