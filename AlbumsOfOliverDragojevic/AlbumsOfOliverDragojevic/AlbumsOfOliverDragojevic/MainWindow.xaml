<Window
    x:Class="AlbumsOfOliverDragojevic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Log in"
    Width="650"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ComboBoxErrorStyle" TargetType="ComboBox">
            <Style.Triggers>
                <Trigger Property="Tag" Value="error">
                    <Setter Property="BorderBrush" Value="Red" />
                    <Setter Property="BorderThickness" Value="1.5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Canvas Width="650" Height="500">
        <Canvas.Resources>
            <DropShadowEffect
                x:Key="MouseOverDropShadowEffect"
                Direction="320"
                Opacity="80"
                ShadowDepth="10"
                Color="PeachPuff" />
        </Canvas.Resources>

        <Path
            Name="UIPath"
            Width="650"
            Height="500"
            Fill="#EADDCA"
            Stretch="Fill"
            Stroke="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="10,0">
                        <ArcSegment
                            IsLargeArc="False"
                            Point="0,10"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="0,340" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="10,350"
                            RotationAngle="0"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="540,350" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="550,340"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                        <LineSegment Point="550,10" />
                        <ArcSegment
                            IsLargeArc="False"
                            Point="540,0"
                            RotationAngle="180"
                            Size="10,10"
                            SweepDirection="Counterclockwise" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <Grid
            Canvas.Left="150"
            Canvas.Top="28"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Border
                Margin="40"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#997a54"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="10">

                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#2b1d0e"
                        Text="User Log In" />

                    <TextBlock
                        FontFamily="Arial"
                        FontSize="14"
                        Foreground="#2b1d0e"
                        Text="Username:" />
                    <Grid>
                        <TextBox
                            x:Name="UsernameTextBox"
                            Height="28"
                            Background="White"
                            FontSize="14"
                            GotFocus="UsernameTextBox_GotFocus"
                            LostFocus="UsernameTextBox_LostFocus"
                            TextChanged="UsernameTextBox_TextChanged" />
                        <TextBlock
                            x:Name="UsernamePlaceholder"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="LightGray"
                            IsHitTestVisible="False"
                            Text="Enter your username"
                            Visibility="Visible" />
                    </Grid>
                    <Label
                        x:Name="UsernameErrorLabel"
                        Content=""
                        Foreground="Red" />

                    <TextBlock
                        FontFamily="Arial"
                        FontSize="14"
                        Foreground="#2b1d0e"
                        Text="Password:" />
                    <Grid>
                        <PasswordBox
                            x:Name="PasswordBox"
                            Height="28"
                            Background="White"
                            FontSize="14"
                            GotFocus="PasswordBox_GotFocus"
                            LostFocus="PasswordBox_LostFocus"
                            PasswordChanged="PasswordBox_PasswordChanged" />

                        <TextBlock
                            x:Name="PasswordPlaceholder"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="LightGray"
                            IsHitTestVisible="False"
                            Text="Enter your password"
                            Visibility="Visible" />
                    </Grid>

                    <Label
                        x:Name="PasswordErrorLabel"
                        Content=""
                        Foreground="Red" />


                    <TextBlock
                        FontFamily="Arial"
                        FontSize="14"
                        Foreground="#2b1d0e"
                        Text="User Role:" />

                    <ComboBox
                        x:Name="UserRoleComboBox"
                        Height="28"
                        Margin="0,5,0,2"
                        FontSize="12"
                        Style="{StaticResource ComboBoxErrorStyle}" />

                    <Label
                        x:Name="UserRoleErrorLabel"
                        Margin="2,0,0,10"
                        Content=""
                        FontSize="12"
                        Foreground="Red" />

                    <StackPanel
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="100"
                            Height="25"
                            Margin="5,0"
                            Background="#2b1d0e"
                            Click="LogInCompleteButton_Click"
                            Content="Log In"
                            FontSize="14"
                            Foreground="White" />

                        <Button
                            Width="100"
                            Height="25"
                            Margin="5,0"
                            Background="LightGray"
                            Click="ExitButton_Click"
                            Content="Exit"
                            FontSize="14"
                            Foreground="Black" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Canvas>

</Window>
