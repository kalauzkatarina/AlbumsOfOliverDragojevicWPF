<Window x:Class="AlbumsOfOliverDragojevic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log in"
        Height="500" Width="650"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <Style TargetType="ComboBox" x:Key="ComboBoxErrorStyle">
            <Style.Triggers>
                <Trigger Property="Tag" Value="error">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border 
            Background="#997a54" 
            BorderBrush="LightGray" 
            BorderThickness="1" 
            CornerRadius="10"
            Padding="20"
            Margin="40"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center">
                <TextBlock 
                    Text="User Log In" 
                    FontSize="28" 
                    FontWeight="Bold" 
                    FontFamily="Segoe UI" 
                    Foreground="#2b1d0e"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 20"/>

                <TextBlock 
                    Text="Username:"
                    FontSize="14"
                    Foreground="#2b1d0e"
                    FontFamily="Arial"/>
                <Grid>
                    <TextBox 
                        x:Name="UsernameTextBox"
                        Height="28"
                        FontSize="14"
                        TextChanged="UsernameTextBox_TextChanged"
                        GotFocus="UsernameTextBox_GotFocus"
                        LostFocus="UsernameTextBox_LostFocus"
                        Background="White"/>
                    <TextBlock
                        x:Name="UsernamePlaceholder"
                        Text="Enter your username"
                        Foreground="LightGray"
                        IsHitTestVisible="False"
                        VerticalAlignment="Center"
                        Margin="5,0,0,0"
                        FontSize="14"
                        Visibility="Visible"/>
                </Grid>
                <Label
                    x:Name="UsernameErrorLabel"
                    Content=""
                    Foreground="Red"/>

                <TextBlock 
                    Text="Password:"
                    FontSize="14"
                    Foreground="#2b1d0e"
                    FontFamily="Arial"/>
                <Grid>
                    <PasswordBox
                        x:Name="PasswordBox"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        GotFocus="PasswordBox_GotFocus"
                        LostFocus="PasswordBox_LostFocus"
                        Height="28"
                        FontSize="14"
                        Background="White"/>

                    <TextBlock
                        x:Name="PasswordPlaceholder"
                        Text="Enter your password"
                        Foreground="LightGray"
                        IsHitTestVisible="False"
                        VerticalAlignment="Center"
                        Margin="5,0,0,0"
                        FontSize="14"
                        Visibility="Visible"/>
                </Grid>

                <Label
                    x:Name="PasswordErrorLabel"
                    Content=""
                    Foreground="Red"/>


                <TextBlock 
                    Text="User Role:"
                    FontSize="14"
                    Foreground="#2b1d0e"
                    FontFamily="Arial"/>

                <ComboBox 
                    x:Name="UserRoleComboBox"
                    Margin="0 5 0 2"
                    Height="28"
                    FontSize="12"
                    Style="{StaticResource ComboBoxErrorStyle}"/>

                <Label
                    x:Name="UserRoleErrorLabel"
                    Content=""
                    Foreground="Red"
                    FontSize="12"
                    Margin="2,0,0,10"/>

                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0 10 0 0">
                    <Button 
                        Content="Log In" 
                        Width="100"
                        Height="25"
                        FontSize="14"
                        Margin="5 0"
                        Background="#2b1d0e"
                        Foreground="White"
                        Click="LogInCompleteButton_Click"/>

                    <Button 
                        Content="Exit" 
                        Width="100"
                        Height="25"
                        FontSize="14"
                        Margin="5 0"
                        Background="LightGray"
                        Foreground="Black"
                        Click="ExitButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
